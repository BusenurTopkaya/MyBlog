@model IEnumerable<Category>
@{
    ViewData["Title"] = "List";
}

    <div class="container">

        <h2>Kategori Listesi</h2>
        <br />

        <div class="row">
            

            <div class="col">
                <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Create">
                    Kategori Ekle
                </a>
                <br /><br />
                @*model aracılığı ile bir kayıt geldiyse*@
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <td>Id</td>
                                <td>Name</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryId</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId">
                                            Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId">
                                            Sil
                                        </a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">
                        Not eklenmemiştir.
                    </div>
                }
            </div>
        </div>

    </div>

