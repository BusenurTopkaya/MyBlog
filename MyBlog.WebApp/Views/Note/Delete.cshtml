@model Note
@{
    ViewData["Title"] = "Delete";
}

<h2>
    <b>@Model.Title</b> isimli kaydı silmek istiyor musunuz?
</h2>

<form asp-controller="Note" asp-action="Delete" method="post">
    <input type="hidden" asp-for="NoteId"/>
    <button type="submit" class="btn btn-danger">Sil</button>
</form>

