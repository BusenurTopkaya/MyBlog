@model IEnumerable<Note>
@{
    ViewData["Title"] = "List";
}

<div class="container">

    <h2>Not Listesi</h2>
    <br />

    <div class="row">
        <div class="col">

            <a class="btn btn-primary btn-sm" asp-controller="Note" asp-action="Create">
                Not Ekle
            </a>
            <br /><br />

            @*model aracılığı ile bir kayıt geldiyse*@
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Image</td>
                            <td>Title</td>
                            <td>Create Date</td>
                            <td>is Approved</td>
                            <td>is Home</td>
                            <td>is Slider</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NoteId</td>
                                <td>
                                    <img src="~/img/@item.Image" width="100" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    @if (item.isApproved)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i>

                                    }
                                    else
                                    {
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    }
                                </td>
                                <td>
                                    @if (item.isHome)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i>

                                    }
                                    else
                                    {
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    }
                                </td>
                                <td>
                                    @if (item.isSlider)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i>

                                    }
                                    else
                                    {
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Note" asp-action="Edit" asp-route-id="@item.NoteId">
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Note" asp-action="Delete" asp-route-id="@item.NoteId">
                                        Sil
                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Not eklenmemiştir.
                </div>
            }
        </div>
    </div>

</div>

